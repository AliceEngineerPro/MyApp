<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:height="250vp"
        ohos:width="match_parent"
        ohos:background_element="$media:qwe">

        <DirectionalLayout
            ohos:id="$+id:date_layout"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_padding="15vp"
            ohos:orientation="horizontal"
            ohos:top_padding="15vp">

            <Text
                ohos:id="$+id:top_month_text"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="00"
                ohos:text_color="#D43030"
                ohos:text_size="30fp"
                />

            <Text
                ohos:id="$+id:top_year_text"
                ohos:text="/0000"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:left_padding="5vp"
                ohos:text_color="#735434"
                ohos:text_size="20fp"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:m_in_layout"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:below="$id:date_layout"
            ohos:left_padding="15vp"
            ohos:orientation="horizontal"
            ohos:top_margin="20vp"
            ohos:top_padding="15vp">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="本月收入"
                ohos:text_color="#735434"
                ohos:text_size="18fp"
                />

            <Text
                ohos:id="$+id:current_month_incomes"
                ohos:height="match_content"
                ohos:width="120vp"
                ohos:left_margin="20vp"
                ohos:left_padding="5vp"
                ohos:text="￥0000.00 >"
                ohos:text_alignment="right"
                ohos:text_color="#735434"
                ohos:text_size="18fp"
                ohos:text_weight="1000"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:m_out_layout"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:below="$id:m_in_layout"
            ohos:left_padding="15vp"
            ohos:orientation="horizontal"
            ohos:top_margin="10vp"
            ohos:top_padding="10vp">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="本月支出"
                ohos:text_color="#735434"
                ohos:text_size="18fp"
                />

            <Text
                ohos:id="$+id:current_month_expenses"
                ohos:height="match_content"
                ohos:width="120vp"
                ohos:left_margin="20vp"
                ohos:text="￥000.00 >"
                ohos:text_alignment="right"
                ohos:text_color="#735434"
                ohos:text_size="18fp"
                ohos:text_weight="1000"
                />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:id="$+id:m_balance_layout"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:below="$id:m_out_layout"
            ohos:left_padding="15vp"
            ohos:orientation="horizontal"
            ohos:top_margin="10vp"
            ohos:top_padding="10vp">

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="本月可用"
                ohos:text_color="#735434"
                ohos:text_size="18fp"
                />

            <Text
                ohos:id="$+id:current_month_balance"
                ohos:height="match_content"
                ohos:width="120vp"
                ohos:left_margin="18fp"
                ohos:text="￥000.00 >"
                ohos:text_alignment="right"
                ohos:text_color="#735434"
                ohos:text_size="18fp"
                ohos:text_weight="1000"
                />
        </DirectionalLayout>

        <StackLayout
            ohos:height="40vp"
            ohos:width="40vp"
            ohos:align_parent_right="true"
            ohos:background_element="$graphic:bird"
            ohos:right_margin="35vp"
            ohos:top_margin="25vp"
            >
            <!--<Text
                ohos:height="80vp"
                ohos:width="66vp"
                ohos:background_element="$graphic:planetwo"
                ohos:bottom_margin="2vp"
                ohos:layout_alignment="horizontal_center|bottom"/>-->
        </StackLayout>
    </DependentLayout>

    <Button
        ohos:id="$+id:recode_one_btn"
        ohos:top_margin="20vp"
        ohos:height="45vp"
        ohos:width="match_parent"
        ohos:text="记一笔"
        ohos:right_padding="10vp"
        ohos:left_padding="10vp"
        ohos:text_weight="700"
        ohos:left_margin="15vp"
        ohos:right_margin="15vp"
        ohos:text_size="20fp"
        ohos:text_color="#CBF6F8F4"
        ohos:background_element="$graphic:background_ability_main"
        />

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:recode_one_btn"
        ohos:id="$+id:today_layout"
        ohos:left_padding="15vp"
        ohos:top_margin="15vp"
        ohos:top_padding="10vp">
        <Text
            ohos:id="$+id:today_left_icon"
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:text_color="#fff"
            ohos:align_parent_left="true"
            ohos:background_element="$graphic:today"
            />
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:today_text_layout1"
            ohos:right_of="$id:today_left_icon"
            >
            <Text
                ohos:id="$+id:today_text1"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="今天"
                ohos:text_size="20fp"
                ohos:left_margin="5vp"
                />
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:below="$id:today_text1"
                ohos:id="$+id:today_bottom_text1"
                ohos:text_size="16fp"
                ohos:text_color="#666"
                ohos:left_margin="5vp"
                ohos:text="xxxxxx"
                />
        </DependentLayout>
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:today_text_layout2"
            ohos:left_of="$id:today_last_dayu"
            ohos:right_margin="30vp"
            >
            <Text
                ohos:id="$+id:today_text2"
                ohos:height="match_content"
                ohos:width="80vp"
                ohos:text="0"
                ohos:text_alignment="right"
                ohos:text_color="#E94747"
                ohos:text_size="18fp"
                ohos:text_weight="600"
                ohos:left_margin="5vp"
                />
            <Text
                ohos:height="match_content"
                ohos:width="80vp"
                ohos:below="$id:today_text2"
                ohos:id="$+id:today_bottom_text2"
                ohos:top_margin="3vp"
                ohos:text_alignment="right"
                ohos:text_weight="600"
                ohos:text_size="18fp"
                ohos:text_color="#3FAC6B"
                ohos:left_margin="5vp"
                ohos:text="0"
                />
        </DependentLayout>
        <Text
            ohos:id="$+id:today_last_dayu"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:vertical_center="true"
            ohos:text=">"
            ohos:text_size="25fp"
            ohos:right_margin="15vp"
            ohos:align_parent_right="true"
            />

    </DependentLayout>
    <Text
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#aaa"
        ohos:left_margin="70vp"
        ohos:top_margin="15vp"
        ohos:right_margin="5vp"
        />

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:today_layout"
        ohos:id="$+id:week_layout"
        ohos:left_padding="15vp"
        ohos:top_margin="15vp"
        ohos:top_padding="10vp">
        <Text
            ohos:id="$+id:week_left_icon"
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:text_color="#fff"
            ohos:align_parent_left="true"
            ohos:background_element="$graphic:week"
            />
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:week_text_layout1"
            ohos:right_of="$id:week_left_icon"
            >
            <Text
                ohos:id="$+id:week_text1"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="本周"
                ohos:text_size="20fp"
                ohos:left_margin="5vp"
                />
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:below="$id:week_text1"
                ohos:id="$+id:week_bottom_text1"
                ohos:text="12月21日-12月26日"
                ohos:text_size="16fp"
                ohos:text_color="#666"
                ohos:left_margin="5vp"
                />
        </DependentLayout>
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:week_text_layout2"
            ohos:left_of="$id:week_last_dayu"
            ohos:right_margin="30vp"
            >
            <Text
                ohos:id="$+id:week_text2"
                ohos:height="match_content"
                ohos:width="80vp"
                ohos:text="0"
                ohos:text_alignment="right"
                ohos:text_color="#E94747"
                ohos:text_size="18fp"
                ohos:text_weight="600"
                ohos:left_margin="5vp"
                />
            <Text
                ohos:height="match_content"
                ohos:width="80vp"
                ohos:below="$id:week_text2"
                ohos:id="$+id:week_bottom_text2"
                ohos:top_margin="3vp"
                ohos:text_alignment="right"
                ohos:text_weight="600"
                ohos:text_size="18fp"
                ohos:text_color="#3FAC6B"
                ohos:left_margin="5vp"
                ohos:text="0"/>
        </DependentLayout>
        <Text
            ohos:id="$+id:week_last_dayu"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:vertical_center="true"
            ohos:text=">"
            ohos:text_size="25fp"
            ohos:right_margin="15vp"
            ohos:align_parent_right="true"
            />

    </DependentLayout>
    <Text
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#aaa"
        ohos:left_margin="70vp"
        ohos:top_margin="15vp"
        ohos:right_margin="5vp"
        />

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:week_layout"
        ohos:id="$+id:month_layout"
        ohos:left_padding="15vp"
        ohos:top_margin="15vp"
        ohos:top_padding="10vp">
        <Text
            ohos:id="$+id:month_left_icon"
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:text_color="#fff"
            ohos:align_parent_left="true"
            ohos:background_element="$graphic:month"
            />
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:month_text_layout1"
            ohos:right_of="$id:month_left_icon"
            >
            <Text
                ohos:id="$+id:month_text1"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="本月"
                ohos:text_size="20fp"
                ohos:left_margin="5vp"
                />
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:below="$id:month_text1"
                ohos:id="$+id:month_bottom_text1"
                ohos:text="12月21日-12月26日"
                ohos:text_size="16fp"
                ohos:text_color="#666"
                ohos:left_margin="5vp"
                />
        </DependentLayout>
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:month_text_layout2"
            ohos:left_of="$id:month_last_dayu"
            ohos:right_margin="30vp"
            >
            <Text
                ohos:id="$+id:month_text2"
                ohos:height="match_content"
                ohos:width="80vp"
                ohos:text="0"
                ohos:text_alignment="right"
                ohos:text_color="#E94747"
                ohos:text_size="18fp"
                ohos:text_weight="600"
                ohos:left_margin="5vp"
                />
            <Text
                ohos:height="match_content"
                ohos:width="80vp"
                ohos:below="$id:month_text2"
                ohos:id="$+id:month_bottom_text2"
                ohos:top_margin="3vp"
                ohos:text_alignment="right"
                ohos:text_weight="600"
                ohos:text_size="18fp"
                ohos:text_color="#3FAC6B"
                ohos:left_margin="5vp"
                ohos:text="0"/>
        </DependentLayout>
        <Text
            ohos:id="$+id:month_last_dayu"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:vertical_center="true"
            ohos:text=">"
            ohos:text_size="25fp"
            ohos:right_margin="15vp"
            ohos:align_parent_right="true"
            />

    </DependentLayout>
    <Text
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#aaa"
        ohos:left_margin="70vp"
        ohos:top_margin="15vp"
        ohos:right_margin="5vp"
        />

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:below="$id:month_layout"
        ohos:id="$+id:year_layout"
        ohos:left_padding="15vp"
        ohos:top_margin="15vp"
        ohos:top_padding="10vp">
        <Text
            ohos:id="$+id:year_left_icon"
            ohos:height="50vp"
            ohos:width="50vp"
            ohos:text_color="#fff"
            ohos:align_parent_left="true"
            ohos:background_element="$graphic:year"
            />
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:year_text_layout1"
            ohos:right_of="$id:year_left_icon"
            >
            <Text
                ohos:id="$+id:year_text1"
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:text="本年"
                ohos:text_size="20fp"
                ohos:left_margin="5vp"
                />
            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:below="$id:year_text1"
                ohos:id="$+id:year_bottom_text1"
                ohos:text="12月21日-12月26日"
                ohos:text_size="16fp"
                ohos:text_color="#666"
                ohos:left_margin="5vp"
                />
        </DependentLayout>
        <DependentLayout
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:id="$+id:year_text_layout2"
            ohos:left_of="$id:year_last_dayu"
            ohos:right_margin="30vp"
            >
            <Text
                ohos:id="$+id:year_text2"
                ohos:height="match_content"
                ohos:width="80vp"
                ohos:text="0"
                ohos:text_alignment="right"
                ohos:text_color="#E94747"
                ohos:text_size="18fp"
                ohos:text_weight="600"
                ohos:left_margin="5vp"
                />
            <Text
                ohos:height="match_content"
                ohos:width="80vp"
                ohos:below="$id:year_text2"
                ohos:id="$+id:year_bottom_text2"
                ohos:top_margin="3vp"
                ohos:text_alignment="right"
                ohos:text_weight="600"
                ohos:text_size="18fp"
                ohos:text_color="#3FAC6B"
                ohos:left_margin="5vp"
                ohos:text="0"
                />
        </DependentLayout>
        <Text
            ohos:id="$+id:year_last_dayu"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:vertical_center="true"
            ohos:text=">"
            ohos:text_size="25fp"
            ohos:right_margin="15vp"
            ohos:align_parent_right="true"
            />

    </DependentLayout>
    <Text
        ohos:height="1vp"
        ohos:width="match_parent"
        ohos:background_element="#aaa"
        ohos:left_margin="70vp"
        ohos:top_margin="15vp"
        ohos:right_margin="5vp"
        />

</DirectionalLayout>