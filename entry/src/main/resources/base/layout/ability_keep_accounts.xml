<?xml version="1.0" encoding="utf-8"?>

<DependentLayout
    ohos:id="$+id:keep_accounts_layout"
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent">

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:orientation="vertical">

        <DependentLayout
            ohos:height="150vp"
            ohos:width="match_parent"
            ohos:background_element="$media:ghb"
            >

            <Button
                ohos:id="$+id:goback_btn"
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:align_parent_left="true"
                ohos:background_element="$graphic:getback"
                ohos:left_margin="15vp"
                ohos:vertical_center="true"
                />

            <Text
                ohos:height="match_content"
                ohos:width="match_content"
                ohos:center_in_parent="true"
                ohos:text="小金库流水"
                ohos:text_size="20fp"
                />

            <Button
                ohos:id="$+id:device_moving_btn"
                ohos:height="30vp"
                ohos:width="30vp"
                ohos:align_parent_right="true"
                ohos:background_element="$graphic:refresh"
                ohos:right_margin="15vp"
                ohos:vertical_center="true"/>
        </DependentLayout>

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="15vp"
            ohos:text="金额"
            ohos:text_color="#666666"
            ohos:text_size="15fp"
            ohos:top_margin="30vp"
            />

        <TextField
            ohos:id="$+id:money_textfield"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:hint="0.0"
            ohos:text_input_type="pattern_number"
            ohos:hint_color="#3FAC6B"
            ohos:left_padding="15vp"
            ohos:text_alignment="vertical_center"
            ohos:text_color="#3FAC6B"
            ohos:text_size="30fp"
            ohos:text_weight="700"
            />

        <Text
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#ccc"
            ohos:left_margin="15vp"
            ohos:right_margin="15vp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="15vp"
            ohos:text="收支事项"
            ohos:text_color="#666666"
            ohos:text_size="15fp"
            ohos:top_margin="5vp"
            />

        <TextField
            ohos:id="$+id:payment_matters_textfield"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:hint="支出/收入的事项..."
            ohos:hint_color="#ccc"
            ohos:left_padding="15vp"
            ohos:text_alignment="vertical_center"
            ohos:text_color="#333333"
            ohos:text_size="18fp"
            />

        <Text
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#ccc"
            ohos:left_margin="15vp"
            ohos:right_margin="15vp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="15vp"
            ohos:text="日期"
            ohos:text_color="#666666"
            ohos:text_size="15fp"
            ohos:top_margin="5vp"
            />

        <Text
            ohos:id="$+id:date_text"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:hint="点击选择日期"
            ohos:hint_color="#ccc"
            ohos:left_padding="15vp"
            ohos:text_alignment="vertical_center"
            ohos:text_color="#333333"
            ohos:text_size="18fp"
            />
        <Text
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#ccc"
            ohos:left_margin="15vp"
            ohos:right_margin="15vp"
            />

        <Text
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:left_margin="15vp"
            ohos:text="时间"
            ohos:text_color="#666666"
            ohos:text_size="15fp"
            ohos:top_margin="5vp"
            />

        <Text
            ohos:id="$+id:date_time_text"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:hint="点击选择时间"
            ohos:hint_color="#ccc"
            ohos:left_padding="15vp"
            ohos:text_alignment="vertical_center"
            ohos:text_color="#333333"
            ohos:text_size="18fp"
            />
        <Text
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#ccc"
            ohos:left_margin="15vp"
            ohos:right_margin="15vp"
            />

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:bottom_padding="15vp"
            ohos:left_margin="15vp"
            ohos:orientation="horizontal"
            ohos:top_padding="15vp">

            <RadioContainer
                ohos:id="$+id:in_ex_radiocontainer"
                ohos:height="match_parent"
                ohos:width="match_parent"
                ohos:orientation="horizontal"
                >

                <RadioButton
                    ohos:id="$+id:expenses_rbtn"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:marked="true"
                    ohos:text="支出"
                    ohos:text_color_off="#333"
                    ohos:text_color_on="#3FAC6B"
                    ohos:text_size="18fp"/>

                <RadioButton
                    ohos:id="$+id:income_rbtn"
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:left_margin="20vp"
                    ohos:text="收入"
                    ohos:text_color_off="#333"
                    ohos:text_color_on="#3FAC6B"
                    ohos:text_size="18fp"/>
            </RadioContainer>
        </DirectionalLayout>

        <Text
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#ccc"
            ohos:left_margin="15vp"
            ohos:right_margin="15vp"
            />


        <TextField
            ohos:id="$+id:remark_textfield"
            ohos:height="50vp"
            ohos:width="match_parent"
            ohos:hint="备注"
            ohos:hint_color="#ccc"
            ohos:text_alignment="vertical_center"
            ohos:left_padding="15vp"
            ohos:text_color="#333333"
            ohos:text_size="18fp"
            />

        <Text
            ohos:height="1vp"
            ohos:width="match_parent"
            ohos:background_element="#ccc"
            ohos:left_margin="15vp"
            ohos:right_margin="15vp"
            />
    </DirectionalLayout>
    <DirectionalLayout
        ohos:align_parent_bottom="true"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal">
        <Button
            ohos:id="$+id:save_record_btn"
            ohos:left_margin="15vp"
            ohos:text="保存"
            ohos:text_color="#ffffff"
            ohos:text_size="20fp"
            ohos:text_weight="700"
            ohos:right_margin="15vp"
            ohos:bottom_margin="15vp"
            ohos:weight="1"
            ohos:height="45vp"
            ohos:width="0"
            ohos:background_element="$graphic:background_ability_main"
            />
    </DirectionalLayout>
</DependentLayout>